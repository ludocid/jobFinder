link(rel='stylesheet', href='lib/bootstrap/dist/css/bootstrap.css')
body(ng-app='app')
    div.container(ng-controller='testCtrl')
        .row
            h1 Post a new job
            form(ng-submit='submit()')
                .form-group
                    input.form-control(placeholder='Title', ng-model='title')
                .form-group
                    textarea.form-control(placeholder='Description', ng-model='description')
                .form-group
                    button.btn.btn-primary(type='submit') submit
        .row
            h1 Find a Job Today!
            .list-group
                a.list-group-item(href='#', ng-repeat='job in jobs')
                    h4.list-group-item-heading {{job.title}}
                    p.list-group-item-text {{job.description}}
script(src='lib/angular/angular.js', type='text/javascript')
script(src='lib/angular-resource/angular-resource.js', type='text/javascript')
script(src='app/app.js', type='text/javascript')
script(src='app/jobs.js', type='text/javascript')